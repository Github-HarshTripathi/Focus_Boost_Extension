{
  "manifest_version": 3,
  "name": "FocusBoost",
  "version": "1.0",
  "description": "A Chrome extension with a Pomodoro timer.",
  "permissions": [
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
